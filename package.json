{
  "name": "employee-management",
  "version": "1.0.0",
  "description": "Приложение для управления базой данных сотрудников",
  "main": "main.ts",
  "homepage": "./",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4200 --open",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "server": "cd backend && node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm start\"",
    "setup": "npm install",
    "electron": "electron .",
    "electron-dev": "concurrently \"ng serve\" \"wait-on http://localhost:4200 && electron .\"",
    "build-electron": "ng build --base-href ./ && electron-builder"
  },
  "dependencies": {
    "@angular/animations": "^15.2.0",
    "@angular/common": "^15.2.0",
    "@angular/compiler": "^15.2.0",
    "@angular/core": "^15.2.0",
    "@angular/forms": "^15.2.0",
    "@angular/platform-browser": "^15.2.0",
    "@angular/platform-browser-dynamic": "^15.2.0",
    "@angular/router": "^15.2.0",
    "@ngneat/until-destroy": "^10.0.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-is-dev": "^3.0.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.0",
    "@angular/cli": "^15.2.0",
    "@angular/compiler-cli": "^15.2.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^18.0.0",
    "concurrently": "^7.6.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "^4.8.2"
  },
  "build": {
    "appId": "com.employee-management.app",
    "productName": "EmpMan",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main.ts",
      "src/assets/**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    }
  }
}
